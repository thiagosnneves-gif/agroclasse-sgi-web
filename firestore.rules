rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function tenantId() {
      return userDoc().data.tenantId;
    }

    function isAdmin() {
      return userDoc().data.role == "admin";
    }

    match /users/{uid} {
      allow read, create, update: if signedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /tenants/{tenant} {
      allow read: if signedIn() && tenant == tenantId();
      allow write: if signedIn() && isAdmin() && tenant == tenantId();
    }

    match /vendors/{docId} {
      allow read: if signedIn() && resource.data.tenantId == tenantId();
      allow write: if signedIn() && isAdmin() &&
        request.resource.data.tenantId == tenantId();
    }

    match /expenses/{docId} {
      allow read: if signedIn() && resource.data.tenantId == tenantId();
      allow create: if signedIn() &&
        request.resource.data.tenantId == tenantId();
      allow update, delete: if signedIn() && isAdmin() &&
        resource.data.tenantId == tenantId();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
